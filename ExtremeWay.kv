#:import layout_examples layout_examples
#:import widget_examples widget_examples
#:import navigation_screen_manager navigation_screen_manager
#:import boxlayout_with_action_bar boxlayout_with_action_bar

<MainMenu@BoxLayout>:
    orientation: "vertical"
    Button:
        text: "Layouts"
        on_press: app.manager.push("PageLayoutExample")
    Button:
        text: "Widgets"
        on_press: app.manager.push("WidgetsExample")
    Button:
        text: "Images"
        on_press: app.manager.push("ImagesExample")

<MyScreenManager>:
    Screen:
        name: "MainMenu"
        MainMenu:
    Screen:
        name: "PageLayoutExample"
        BoxLayoutWithActionBar:
            title: "Layouts"
            PageLayoutExample:
    Screen:
        name: "WidgetsExample"
        BoxLayoutWithActionBar:
            title: "Widgets"
            WidgetsExample:
    Screen:
        name: "ImagesExample"
        BoxLayoutWithActionBar:
            title: "Images"
            ImagesExample:


