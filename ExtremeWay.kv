#:import layout_examples layout_examples
#:import widget_examples widget_examples

MyScreenManager:

<MyScreenManager@ScreenManager>:
    Screen:
        name: "screen1"
        Button:
            text: "Botton1"
            on_press: root.transition.direction = "left" ; root.current = "screen2"
    Screen:
        name: "screen2"
        Button:
            text: "Botton2"
            on_press: root.transition.direction = "right" ; root.current = root.previous()
    Screen:
        name: "screen3"
        Button:
            text: "Botton3"
            on_press: root.transition.direction = "right" ; root.current = root.previous()

