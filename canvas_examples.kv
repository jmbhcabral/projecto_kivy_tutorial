#:set s dp(150)

<CanvasExample1>:
    canvas:
        Rectangle:
            pos: self.center_x-s/2, self.center_y-s/2
            size: s, s
        Ellipse:
            pos: 200, 500
            size: s, s/2
        Line:
            points: (0, 0, self.width/4, 100, self.width/2, 0, self.width*3/4, 100, self.width, 0)
            width: 2

<CanvasExample2>:
    canvas:
        Line:
            points: (0, self.height/2, self.width, self.height/2)
            width: 5
        Line:
            points:(self.width/2, 0, self.width/2, self.height)
            width: 5

<CanvasExample3>:
    canvas:
        Color:
            rgba: 1, 0, 0, .3
        Line:
            circle: (200, 200, 100)  # center_x, center_y, radius
            width: 2
        Line:
            ellipse: (500, 300, 100, 200)  # center_x, center_y, radius_x, radius_y
            width: 4
        Color:
            rgba: 0, 0, 1, 1
        Line:
            rectangle: (800, 100, 300, 200)  # x, y, w, height
            width: 3

<CanvasExample4>:
    Button:
        pos: dp(100), dp(400)
        text: "Click to move"
        text_size: self.width -20, None
        halign: "center"
        valign: "middle"
        # shorten: True
        # shorten_from: "center"
        # ellipsis_options: {'color': (1, 0, 0, 1)}
        on_press: root.on_button_move_click()

<CanvasExample6>:
    BoxLayout:
        size: root.size
        Widget:
            canvas:
                Color:
                    rgb: 0, 1, 0
                Rectangle:
                    size: self.size
        Widget:
            canvas:
                Color:
                    rgb: 0, 0, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
